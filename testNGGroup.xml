<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">

	<test name="Run Smoke Tests">
		<groups>
			<run>
				<include name="smoke" />
				<include name="functional" />
			</run>
		</groups>
		<classes>
			<class name="TestNGPackage.TestNGGroupsExample" />
		</classes>
	</test>
	
	<test name="Run Regression Tests">
		<groups>
			<run>
				<include name="regression" />
				<include name="functional" />
			</run>
		</groups>
		<classes>
			<class name="TestNGPackage.TestNGGroupsExample" />
		</classes>
	</test>

</suite> 
